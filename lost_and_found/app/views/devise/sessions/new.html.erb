<style>
    body {
        background: url(<%= asset_path('login.jpg') %>) center/cover no-repeat, linear-gradient(to right, #4facfe, #00f2fe);
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        display: flex;
        color: #333;

    }
</style>
<div class="login-container">
  <div class="login-form">
    <h1><i class="fas fa-user-circle"></i> Login</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form" }) do |f| %>
      <%= devise_error_messages! %>

      <!-- Email/Username Field -->
      <div class="input-field">
        <i class="fas fa-user"></i>
        <%= f.text_field :email, placeholder: "Email", required: true, autofocus: true %>
      </div>

      <!-- Password Field -->
      <div class="input-field">
        <i class="fas fa-lock"></i>
        <%= f.password_field :password, placeholder: "Password", required: true, autocomplete: "current-password" %>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn">Login</button>
    <% end %>

    <!-- Links -->
    <div class="links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
